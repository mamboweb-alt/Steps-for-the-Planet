      <h2>Submit Your Steps</h2>
      <input type="number" id="stepsInput" placeholder="Enter your steps">
      <button id="submitButton">Submit Steps</button>
    </section>
    <section id="leaderboard">
      <h2>Leaderboard</h2>
      <button id="leaderboardButton">Refresh Leaderboard</button>
    </section>
  </main>
