<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Steps for the Planet</title>
  <script type="module">
    // Import the functions you need from the SDKs you need
    import { initializeApp } from "https://www.gstatic.com/firebasejs/9.17.2/firebase-app.js";
    import { getAuth, signInWithPopup, GoogleAuthProvider } from "https://www.gstatic.com/firebasejs/9.17.2/firebase-auth.js";
    import { getFirestore, collection, addDoc, getDocs } from "https://www.gstatic.com/firebasejs/9.17.2/firebase-firestore.js";

    // Your web app's Firebase configuration
    const firebaseConfig = {
      apiKey: "AIzaSyBSbRVLxAcEr0SEvynL5S5lRxGcU4lRTig",
      authDomain: "steps-for-the-planet-4d048.firebaseapp.com",
      projectId: "steps-for-the-planet-4d048",
      storageBucket: "steps-for-the-planet-4d048.firebasestorage.app",
      messagingSenderId: "80116022497",
      appId: "1:80116022497:web:2873e256f41aa5f2b64ba0"
    };

    // Initialize Firebase
    const app = initializeApp(firebaseConfig);
    const auth = getAuth(app);
    const db = getFirestore(app);

    // Google Login
    async function loginWithGoogle() {
      const provider = new GoogleAuthProvider();
      try {
        const result = await signInWithPopup(auth, provider);
        const user = result.user;
        alert(`Logged in as ${user.displayName}`);
      } catch (error) {
        console.error("Error during login:", error);
      }
    }

    // Submit steps
    async function submitSteps() {
      const stepsInput = document.getElementById("stepsInput");
      const steps = stepsInput.value;
      const user = auth.currentUser;

      if (!user) {
        alert("Please log in first!");
        return;
      }

      try {
        await addDoc(collection(db, "steps"), {
          userId: user.uid,
          steps: parseInt(steps),
          timestamp: new Date(),
        });
        alert("Steps submitted successfully!");
      } catch (error) {
        console.error("Error submitting steps:", error);
      }
    }

    // Fetch leaderboard
    async function fetchLeaderboard() {
      const leaderboard = document.getElementById("leaderboard");
      leaderboard.innerHTML = "<h3>Leaderboard</h3>";

      try {
        const querySnapshot = await getDocs(collection(db, "steps"));
        const data = [];
        querySnapshot.forEach((doc) => {
          data.push(doc.data());
        });

        data.sort((a, b) => b.steps - a.steps);
        data.forEach((entry) => {
          const div = document.createElement("div");
          div.textContent = `User: ${entry.userId}, Steps: ${entry.steps}`;
          leaderboard.appendChild(div);
        });
      } catch (error) {
        console.error("Error fetching leaderboard:", error);
      }
    }

    // Attach functions to buttons
    window.onload = () => {
      document.getElementById("loginButton").onclick = loginWithGoogle;
      document.getElementById("submitButton").onclick = submitSteps;
      document.getElementById("leaderboardButton").onclick = fetchLeaderboard;
    };
  </script>
</head>
<body>
  <header>
    <main>
